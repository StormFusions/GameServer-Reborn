    script.
      const REFRESH_INTERVAL = 5000;
      let autoRefreshEnabled = true;

      function formatSeconds(seconds) {
        if (seconds < 60) return `${seconds}s`;
        if (seconds < 3600) return `${Math.floor(seconds / 60)}m ${seconds % 60}s`;
        return `${Math.floor(seconds / 3600)}h ${Math.floor((seconds % 3600) / 60)}m`;
      }

      function formatTime(timestamp) {
        return new Date(timestamp).toLocaleTimeString();
      }

      async function loadPlayers() {
        try {
          const response = await fetch('/dashboard/api/players/current');
          const result = await response.json();

          if (result.success) {
            const { players, statistics } = result.data;

            document.getElementById('stats-total').textContent = players.length;
            document.getElementById('stats-avg').textContent = formatSeconds(statistics.averageSessionLength);
            document.getElementById('stats-longest').textContent = formatSeconds(statistics.longestSession);

            const tbody = document.getElementById('players-table');
            if (players.length === 0) {
              tbody.innerHTML = '<tr><td colspan="6" class="text-center text-muted">No players currently online</td></tr>';
            } else {
              tbody.innerHTML = players.map(player => `
                <tr>
                  <td><strong>${player.username}</strong></td>
                  <td><code>${player.userId}</code></td>
                  <td><code>${player.mayhemId}</code></td>
                  <td>${formatTime(player.connectedAt)}</td>
                  <td>${formatSeconds(player.lastActivitySeconds)} ago</td>
                  <td><span class="badge badge-success">${formatSeconds(player.secondsActive)}</span></td>
                </tr>
              `).join('');
            }
          } else {
            document.getElementById('players-table').innerHTML = '<tr><td colspan="6" class="text-center text-warning">No data available</td></tr>';
          }
        } catch (error) {
          console.error('Error loading players:', error);
          document.getElementById('players-table').innerHTML = '<tr><td colspan="6" class="text-center text-danger">Error loading data</td></tr>';
        }
      }

      document.addEventListener('DOMContentLoaded', () => {
        const refreshCheckbox = document.getElementById('auto-refresh');
        refreshCheckbox?.addEventListener('change', (e) => {
          autoRefreshEnabled = e.target.checked;
        });

        loadPlayers();
        setInterval(() => {
          if (autoRefreshEnabled) loadPlayers();
        }, REFRESH_INTERVAL);
      });
