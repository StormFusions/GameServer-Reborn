    main.content-container
      .content-wrapper
        h2 Database & Data Backups
        
        .stats-grid
          .stat-card
            .stat-icon
              svg(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 24 24" width="32" height="32" fill="currentColor")
                path(d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z")
            .stat-content
              .stat-label Total Backups
              .stat-value#stat-backup-count --
          
          .stat-card
            .stat-icon
              svg(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 24 24" width="32" height="32" fill="currentColor")
                path(d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z")
            .stat-content
              .stat-label Total Size
              .stat-value#stat-total-size --
        
        .actions-section
          h3 Quick Actions
          .actions-grid
            button.action-button(type="button" onclick="API.createBackup()")
              svg(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 24 24" width="24" height="24" fill="currentColor")
                path(d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z")
              span Create Backup
            button.action-button(type="button" onclick="API.refreshBackups()")
              svg(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 24 24" width="24" height="24" fill="currentColor")
                path(d="M1 4v6h6M23 20v-6h-6M20.54 9.54C19.84 6.94 17.48 5 14.64 5c-2.09 0-3.9 1.08-4.95 2.7-.35-.49-.75-.96-1.21-1.38C8.97 3.73 11.25 2 14.64 2c3.59 0 6.8 2.26 8.12 5.54zM3.46 14.46C4.16 17.06 6.52 19 9.36 19c2.09 0 3.9-1.08 4.95-2.7.35.49.75.96 1.21 1.38C15.03 20.27 12.75 22 9.36 22c-3.59 0-6.8-2.26-8.12-5.54z")
              span Refresh
            button.action-button.stop-btn(type="button" onclick="API.stopServer()")
              svg(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 24 24" width="24" height="24" fill="currentColor")
                path(d="M6 4h12v12H6z")
              span Stop Database
            button.action-button.start-btn(type="button" onclick="API.restartServer()")
              svg(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 24 24" width="24" height="24" fill="currentColor")
                path(d="M8 5v14l11-7z")
              span Restart Server
        
        h3 Available Backups
        #backups-list(style="width: 100%;")
          p Loading backups...

    script.
      function toggleSidebar() {
        const sidebar = document.querySelector('.sidebar');
        sidebar.classList.toggle('active');
      }
      
      window.addEventListener('click', function(event) {
        const sidebar = document.querySelector('.sidebar');
        const toggle = document.querySelector('.menu-toggle');
        if (!event.target.closest('.sidebar') && !event.target.closest('.menu-toggle')) {
          sidebar.classList.remove('active');
        }
      });

      document.addEventListener('DOMContentLoaded', () => {
        API.refreshBackups();
        // Refresh every 30 seconds
        setInterval(() => {
          API.refreshBackups();
        }, 30000);
      });
    
    script(src="/dashboard/assets/api.js")
