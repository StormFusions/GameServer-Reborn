doctype html
html(lang="en")
  head
    title="User Login"
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/dashboard/assets/userdash.css")
    style.
      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: linear-gradient(135deg, var(--dark) 0%, #1a1a1a 100%);
        padding: 1rem;
      }
      
      .login-container {
        width: 100%;
        max-width: 500px;
        display: flex;
        flex-direction: column;
      }
      
      .login-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 3rem 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        margin-bottom: 2rem;
      }
      
      .login-card h1 {
        text-align: center;
        color: var(--text);
        margin-bottom: 0.5rem;
        font-size: 2rem;
      }
      
      .login-card .subtitle {
        text-align: center;
        color: var(--text-secondary);
        margin-bottom: 2rem;
        font-size: 0.9rem;
      }
      
      #info-message {
        display: none;
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 6px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #3b82f6;
        font-size: 0.9rem;
      }
      
      #info-message.show {
        display: block;
      }
      
      .form-inputs {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      
      .input-field {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.12);
        color: var(--text);
        padding: 0.75rem 1rem;
        border-radius: 6px;
        font-size: 1rem;
        transition: all 0.3s ease;
      }
      
      .input-field:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.12);
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(17, 85, 135, 0.1);
      }
      
      .input-field.hidden {
        display: none;
      }
      
      .button-group {
        display: flex;
        gap: 1rem;
        flex-direction: column;
      }
      
      .btn-action {
        background: var(--primary);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
      }
      
      .btn-action:hover {
        background: #0d4570;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(17, 85, 135, 0.3);
      }
      
      .btn-action:active {
        transform: translateY(0);
      }
      
      .btn-action.hidden {
        display: none;
      }
      
      .stats-info {
        text-align: center;
        color: var(--text-secondary);
        font-size: 0.9rem;
      }
      
      footer {
        text-align: center;
        color: var(--text-secondary);
        font-size: 0.8rem;
        margin-top: auto;
      }
      
      @media (max-width: 480px) {
        .login-card {
          padding: 2rem 1.5rem;
        }
        
        .login-card h1 {
          font-size: 1.5rem;
        }
        
        body {
          justify-content: flex-start;
          padding-top: 2rem;
        }
      }
  
  body
    .login-container
      .login-card
        h1 Welcome
        p.subtitle Sign in to your account
        
        #info-message
        
        .form-inputs
          input#email-input.input-field(type="email", placeholder="email@domain.com", autocomplete="email")
          input#code-input.input-field.hidden(type="number", placeholder="123456", autocomplete="off")
        
        .button-group
          button#code-button.btn-action(type="button", onclick="API.sendCode()") Send Code
          button#login-button.btn-action.hidden(type="button", onclick="API.login()") Validate Code
      
      .stats-info
        label.current-users Current Users: Loading...
    
    footer
      p We are not affiliated with The Walt Disney Company and/or EA.

  script(src="/dashboard/assets/api.js")
